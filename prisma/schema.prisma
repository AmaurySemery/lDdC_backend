generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Localisation {
  id             String        @id @default(uuid()) @db.Uuid
  world          String
  coordinates    Json
  description    String
  places         Json
  name           String
  characters     Character[]
}

model Character {
  id             String        @id @default(uuid()) @db.Uuid
  name           String
  background     String
  picture        String
  race           String
  localisation   Localisation  @relation(fields: [localisationId], references: [id])
  localisationId String
}

model Chronology {
  id             String        @id @default(uuid()) @db.Uuid
  events         Json
  plot           Boolean
  localisation   Localisation  @relation(fields: [localisationId], references: [id])
  localisationId String
}

model User {
  id             String        @id @default(uuid()) @db.Uuid
  name           String        @unique
  role           String
  password       String
}